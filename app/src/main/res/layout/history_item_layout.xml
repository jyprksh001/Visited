<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="3dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <RelativeLayout
            android:id="@+id/history_rela_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:background="@drawable/destination_icon"
            android:transitionName="shareView" />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/history_rela_round"
            android:layout_toRightOf="@id/history_rela_round"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Time Stamp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/source_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_text_view"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toEndOf="@id/history_rela_round"
            android:layout_toRightOf="@id/history_rela_round"
            android:text="Source" />

        <TextView
            android:id="@+id/destination_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/source_textview"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toEndOf="@id/history_rela_round"
            android:layout_toRightOf="@id/history_rela_round"
            android:text="Destination" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
